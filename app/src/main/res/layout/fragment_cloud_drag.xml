<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.qkxmall.mall.views.cloud.detail.CloudDragFragment">

<!-- TODO: Update blank fragment layout -->
<TextView
    android:id="@+id/loadView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="数据加载中，请稍候..."
    android:visibility="gone"
    />

<com.qkxmall.mall.define.widget.DragLayout
    android:id="@+id/drag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >
    <FrameLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.qkxmall.mall.define.widget.DragLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dddddd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >
        <ImageView
            android:id="@+id/newer"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/kf"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dddddd"
            />

        <ImageView
            android:id="@+id/community"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/sq"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dddddd"
            />

        <ImageView
            android:id="@+id/customService"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/xinshou_zhinan"
            />
        <ImageView
            android:id="@+id/addToCollect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_cart"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/liji_coucou"
            />
    </LinearLayout>
</RelativeLayout>

</LinearLayout>

