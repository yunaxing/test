<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.sale.AfterSaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/after_sale_backup"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/left_array_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="售后服务"
            android:textSize="26sp"
            android:textColor="@color/text_black"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

        <RadioGroup
            android:id="@+id/after_sale_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="换货"
                android:textSize="19sp"
                android:button="@drawable/after_sale_itme"
                android:paddingLeft="40dp"
                android:layout_marginLeft="30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="维修"
                android:textSize="19sp"
                android:button="@drawable/after_sale_itme"
                android:paddingLeft="40dp"
                android:layout_marginLeft="30dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="退款"
                android:textSize="19sp"
                android:button="@drawable/after_sale_itme"
                android:paddingLeft="40dp"
                android:layout_marginLeft="30dp"
                ></RadioButton>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="退款退货"
                android:textSize="19sp"
                android:button="@drawable/after_sale_itme"
                android:paddingLeft="40dp"
                android:layout_marginLeft="30dp"

                ></RadioButton>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="补充说明"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <EditText
            android:id="@+id/after_sale_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:lines="3"
            />

        <TextView
            android:id="@+id/after_sale_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="添加图片"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tianjiatuq"
                   android:paddingLeft="10dp"
                />
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tianjiatuq"
                android:paddingLeft="10dp"
                />
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tianjiatuq"
                android:paddingLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/after_sale_submit"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="提交审核"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/cloud_buy_text_color_red"
        />
</RelativeLayout>
