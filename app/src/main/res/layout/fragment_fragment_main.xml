<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qkxmall.mall.views.fragment.MainFragment">

    <RelativeLayout
        android:id="@+id/tools_main_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:elevation="8dp"
        android:background="@color/main_title_color"
        >

        <ImageView
            android:id="@+id/main_icon_qkx"
            android:layout_width="79dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_qkx"
            />
        <ImageView
            android:layout_width="181dp"
            android:layout_height="24dp"
            android:paddingLeft="24dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_title_center_text"
            />

        <ImageView
            android:id="@+id/share_main_share_app"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:src="@drawable/share_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/tab_main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tools_main_bar"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/ads"
                    android:layout_height="155dp"
                    android:layout_width="match_parent"
                    ></android.support.v4.view.ViewPager>

                <View
                    android:id="@+id/main_cloud_buy_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/ads"
                    android:background="@color/main_line_blue_color"
                    />

                <ImageView
                    android:id="@+id/cloud_buy_text"
                    android:layout_width="129dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/cloud_buy_title"
                    android:layout_below="@id/ads"
                    />

                <RelativeLayout
                    android:id="@+id/cloud_buy_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_cloud_buy_line"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/cloud_buy_will"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/cloud_buy_pro_will_info"
                            android:layout_marginTop="32dp"
                            android:layout_width="match_parent"
                            android:layout_height="114dp"
                            android:paddingTop="8dp"
                            android:orientation="horizontal"
                            >
                           <!-- <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/image"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="8dp"
                                android:paddingTop="24dp"
                                android:paddingBottom="8dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:layout_centerVertical="true"
                                fresco:placeholderImage="@drawable/load_default"
                                />-->
                            <ImageView
                                android:id="@+id/image_title"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/load_default"
                                android:scaleType="fitXY"

                                />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="24dp"
                     android:background="@drawable/jjjx"
                     android:layout_marginLeft="8dp"
                     android:text="即将揭晓"

                     android:textColor="#007bea"
                     android:textSize="20sp"
                     android:gravity="center"
                     />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/image_title"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:layout_marginRight="6dp"
                                    android:layout_centerVertical="true"
                                    android:textSize="16sp"
                                    android:text="智能手表 Moto 360 摩托罗拉 智能手表 摩托罗拉"
                                    android:lines="2"
                                    />

                                <ProgressBar
                                    android:id="@+id/progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginRight="8dp"
                                    android:padding="2dp"
                                    android:layout_below="@id/cloud_buy_will_product_text"
                                    style="@style/defineProgressBar"
                                    />
                                <LinearLayout
                                    android:id="@+id/temp_line_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_below="@id/cloud_buy_will_progress"
                                    android:orientation="horizontal"
                                    >
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/current"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/green"
                                            android:text="1896"
                                            android:textSize="12sp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="已参与"
                                            android:textSize="12sp"
                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginLeft="8dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1"
                                        >
                                        <TextView
                                            android:id="@+id/total"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/cloud_buy_text_color_red"
                                            android:text="3895"
                                            android:textSize="12sp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="总需"
                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginRight="8dp"
                                        android:gravity="right"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/remain"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/main_line_blue_color"
                                            android:text="1999"
                                            android:textSize="12sp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="剩余"
                                            android:textSize="12sp"
                                            />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <com.qkxmall.mall.define.override.GridView
                        android:id="@+id/cloud_buy_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_below="@id/cloud_buy_will"
                        android:numColumns="3"
                        android:horizontalSpacing="0.5pt"
                        android:verticalSpacing="0.5pt"
                        android:gravity="center"
                        android:background="@color/grid_view_background_grey_500"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="1dp"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="0.6dp"
                        ></com.qkxmall.mall.define.override.GridView>

                </RelativeLayout>
                <View
                    android:id="@+id/main_hui_buy_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/cloud_buy_line_1"
                    android:layout_marginTop="4dp"
                    android:background="@color/main_line_pink_color"
                    />

                <ImageView
                    android:id="@+id/main_youhui_title"
                    android:layout_width="132dp"
                    android:layout_height="36dp"
                    android:layout_below="@id/main_hui_buy_line"
                    android:src="@drawable/icon_title_huigou"
                    />
                <RelativeLayout
                    android:id="@+id/f_buy_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/main_youhui_title"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/huigou_class_line_hot_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <GridView
                            android:id="@+id/huigou_class_line_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:numColumns="2"
                            android:horizontalSpacing="0.5pt"
                            android:verticalSpacing="0.5pt"
                            android:padding="1dp"
                            android:gravity="center"
                            android:background="@color/grid_view_background_grey_500"></GridView>

                    </RelativeLayout>

                    <com.qkxmall.mall.define.override.GridView
                        android:id="@+id/huigou_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:numColumns="3"
                        android:layout_below="@id/huigou_class_line_hot_1"
                        android:horizontalSpacing="0.5pt"
                        android:verticalSpacing="0.5pt"
                        android:gravity="center"
                        android:background="@color/grid_view_background_grey_500"
                        android:paddingTop="1dp"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="0.5dp"
                        ></com.qkxmall.mall.define.override.GridView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/congzhi_line_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/f_buy_line_1"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/congzhi_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="36dp"
                        android:background="@color/main_congzhi_line_color"
                        />
                    <ImageView
                        android:id="@+id/congzhi_title_img"
                        android:layout_width="92dp"
                        android:layout_height="23dp"
                        android:src="@drawable/congzhi_title"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:layout_width="88dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/congzhi_icon"
                                android:layout_width="78dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="32dp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/icon_congzhi"
                                />
                        </RelativeLayout>

                        <GridView
                            android:id="@+id/congzhi_grid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:horizontalSpacing="0.5pt"
                            android:verticalSpacing="0.5pt"
                            android:gravity="center"
                            android:background="@color/grid_view_background_grey_500"
                            android:numColumns="3"
                            android:padding="1dp"
                            ></GridView>
                    </LinearLayout>

                    <View
                        android:id="@+id/congzhi_line_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_congzhi_line_color"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/more_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/congzhi_line_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="点击下面导航会有更多精彩"
                    android:textSize="14sp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
