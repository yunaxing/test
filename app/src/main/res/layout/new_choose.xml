<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300px"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/transparent">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/black"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="195dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="345px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:text="namenamenamenamenamenamenamenamenamename"
                    android:textColor="#888687"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="315dp"
                android:background="@mipmap/faqi_coucou_close" />

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeeeee" />
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_title"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="280px"
        android:layout_height="280px"
        app:placeholderImage="@drawable/load_default"
        />



    <ListView
        android:id="@+id/specList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:background="#ffffff"
        android:layout_marginTop="212dp"></ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_below="@+id/specList"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/img_confirm"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="120dp"
            android:background="@mipmap/faqicoucou3_confirm" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
             />
    </LinearLayout>

</RelativeLayout>