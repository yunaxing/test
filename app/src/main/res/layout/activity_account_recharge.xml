<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/account_recharge_background_color"
    tools:context=".views.user.AccountRechargeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/navigation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/left_array_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="账户充值"
            android:textSize="28sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:text="账户余额："
            />
        <TextView
            android:id="@+id/account_recharge_account_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:text="0.00"
            android:textColor="@color/cloud_buy_text_color_red"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:text="元"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/account_recharge_50"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:text="50"
                android:textColor="@color/grid_view_background_grey_500"
                android:background="@drawable/radius_white_button_background"
                />
            <Button
                android:id="@+id/account_recharge_100"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:text="100"
                android:textColor="@color/grid_view_background_grey_500"
                android:background="@drawable/radius_white_button_background"
                />
            <Button
                android:id="@+id/account_recharge_200"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:text="200"
                android:textColor="@color/grid_view_background_grey_500"
                android:background="@drawable/radius_white_button_background"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/account_recharge_500"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:text="500"
                android:textColor="@color/grid_view_background_grey_500"
                android:background="@drawable/radius_white_button_background"
                />
            <Button
                android:id="@+id/account_recharge_1000"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:text="1000"
                android:textColor="@color/grid_view_background_grey_500"
                android:background="@drawable/radius_white_button_background"
                />
            <EditText
                android:id="@+id/account_recharge_other_amount"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:inputType="number"
                android:hint="其他金额"
                android:textSize="14sp"
                android:textColor="@color/grid_view_background_grey_500"
                android:background="@drawable/radius_white_button_background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:background="@drawable/radius_white_button_background"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:text="充值金额"
                />

            <TextView
                android:id="@+id/account_recharge_recharge_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/cloud_buy_text_color_red"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dashed_grey_line"
            />
        <RadioGroup
            android:id="@+id/account_recharge_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/account_recharge_a_li_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dashed_grey_line"
                />
            <RadioButton
                android:id="@+id/account_recharge_union_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="网银快捷支付"
                />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/account_recharge_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="充 值"
        android:textColor="@color/white"
        android:background="@drawable/radius_red_button_background"
        />

</LinearLayout>
