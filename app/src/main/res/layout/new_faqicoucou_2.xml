<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_grey_300"
    tools:context=".views.hui.HuiBuyPayActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        ></LinearLayout>

    <RelativeLayout
        android:id="@+id/title_h"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@mipmap/faqicoucou_2_wenzi"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="510dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="65dp"
                android:background="@drawable/radius_white_button_background"
                >
                <ImageView
                    android:id="@+id/push"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:padding="4dp"
                    android:src="@drawable/p"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/material_grey_600"
                    />
                <EditText
                    android:id="@+id/use_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:inputType="number"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@null"
                    android:editable="false"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/material_grey_600"
                    />
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    android:src="@drawable/a"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/getway"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@mipmap/faqicoucou_2_btn_lijifaqi"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>