<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/suggest_background_color"
    >

    <include layout="@layout/templet_top_bar"
        android:id="@+id/templet"
        />

    <com.qkxmall.mall.define.override.WebView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="24sp"
        android:layout_below="@id/templet"
        android:textColor="@color/grid_view_background_grey_500" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="新手指南"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/radius_red_button_background"
            />
        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="常见问题"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/radius_red_button_background"/>
    </LinearLayout>
</RelativeLayout>


