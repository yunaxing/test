<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qkxmall.mall.views.cloud.search.CloudSearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/navigation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/left_array_black"
            />
        <EditText
            android:id="@+id/info"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:gravity="bottom"
            android:hint="云搜"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_red_bg"
            />
        <Button
            android:id="@+id/search"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical|right"
            android:text="云搜"
            android:textColor="@color/white"
            android:background="@drawable/radius_red_button_background"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="1dp"
        android:background="@color/black"
        />

</RelativeLayout>
