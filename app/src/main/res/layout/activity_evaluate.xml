<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qkxmall.mall.views.EvaluateActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        ></LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/evaluate_backup"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left_array_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="晒单评价"
                    android:textSize="26sp"
                    android:textColor="@color/text_black"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="服务评分"
                android:textSize="20sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="描述相符"
                    android:textSize="19sp"
                    />
                <RatingBar
                    android:id="@+id/evaluate_describe_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:rating = "0"
                    android:numStars="5"
                    android:stepSize = "0.5"
                    android:isIndicator="false"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="物流速度"
                    android:textSize="19sp"
                    />
                <RatingBar
                    android:id="@+id/evaluate_di_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating = "0"
                    android:numStars="5"
                    android:stepSize = "0.5"
                    android:isIndicator="false"
                    android:layout_gravity="center_vertical|right"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="评价"
                android:textSize="19sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <EditText
                android:id="@+id/evaluate_evaluate_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lines="5"
                android:hint="谢谢您对我们的信任与支持，请留下您的宝贵建议，相信我们可以做的更好！"
                />

            <TextView
                android:id="@+id/evaluate_add_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="添加图片"
                android:textSize="20sp"
                android:textColor="@color/material_blue_grey_800"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv01"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_margin="8dp"
                    />
                <ImageView
                    android:id="@+id/iv02"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_margin="8dp" />
                <ImageView
                    android:id="@+id/iv03"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_margin="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




    <Button
        android:id="@+id/evaluate_submit"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="提交"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/radius_red_button_background"
        />
</RelativeLayout>
